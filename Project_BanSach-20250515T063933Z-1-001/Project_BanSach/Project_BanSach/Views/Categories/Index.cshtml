@model IEnumerable<Project_BanSach.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_QuanLy.cshtml";
}

<h1>CATEGORY</h1>

<p>
    <a asp-action="Create">NEW</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDanhMuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDanhMuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaCate">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaCate">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaCate">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
