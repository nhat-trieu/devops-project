@model Project_BanSach.Models.ChitietDonhang

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_QuanLy.cshtml";
}

<h1>Thêm Chi tiết đơn hàng</h1>

<h4>ChitietDonhang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaDhCtdh" class="control-label"></label>
                <select asp-for="MaDhCtdh" class ="form-control" asp-items="ViewBag.MaDhCtdh"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaSachCtdh" class="control-label"></label>
                <select asp-for="MaSachCtdh" class ="form-control" asp-items="ViewBag.MaSachCtdh"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThanhTien" class="control-label"></label>
                <input asp-for="ThanhTien" class="form-control" />
                <span asp-validation-for="ThanhTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TinhTrangThanhToan" class="control-label"></label>
                <input asp-for="TinhTrangThanhToan" class="form-control" />
                <span asp-validation-for="TinhTrangThanhToan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button asp-action="Index" value="Quay lại"></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
