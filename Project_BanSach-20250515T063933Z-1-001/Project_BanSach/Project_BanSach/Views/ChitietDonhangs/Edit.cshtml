@model Project_BanSach.Models.ChitietDonhang

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa chi tiết đơn hàng</h1>

<h4>ChitietDonhang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDhCtdh" />
            <input type="hidden" asp-for="MaSachCtdh" />
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
