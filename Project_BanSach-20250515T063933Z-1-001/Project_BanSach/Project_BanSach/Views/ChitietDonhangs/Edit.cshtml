            </div>
            <div class="form-group">
                <label asp-for="TinhTrangThanhToan" class="control-label"></label>
                <input asp-for="TinhTrangThanhToan" class="form-control" />
                <span asp-validation-for="TinhTrangThanhToan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button asp-action="Index" value="Quay lại"></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
