@model IEnumerable<Project_BanSach.Models.Ncc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_QuanLy.cshtml";

}

<h1>NHÀ CUNG CẤP</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNcc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNcc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaNcc">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaNcc">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaNcc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
